<!-- Spinner Start -->
<div id="spinner"
  class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
  <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->

<!-- Navbar start -->
<div class="container-fluid fixed-top">
  <div class="container topbar bg-primary d-none d-lg-block">
    <div class="d-flex justify-content-between">
      <div class="top-info ps-2">
        <small id="currentDate" class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i>
          <a href="#" class="text-white"></a></small>
        <script>
          var currentDate = new Date();

          var options = {
            year: "numeric",
            month: "long",
            day: "numeric",
          };
          var formattedDate = currentDate.toLocaleDateString("vi-VN", options);

          var smallElement = document.getElementById("currentDate");
          smallElement.innerHTML = `<i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Cần Thơ, ${formattedDate}</a>`;
        </script>


        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#"
            class="text-white">sutten2004@gmail.com</a></small>
      </div>
      <div class="top-link pe-2">
        <a href="#" class="text-white"><small class="text-white mx-2">Chính
            sách dịch vụ</small>/</a>
        <a href="#" class="text-white"><small class="text-white mx-2">Hướng
            dẫn sử dụng</small>/</a>
        <a href="#" class="text-white"><small class="text-white ms-2">Giới thiệu</small></a>
      </div>
    </div>
  </div>
  <div class="container px-0">
    <nav class="navbar navbar-light bg-white navbar-expand-xl">
      <a href="/" class="navbar-brand">
        <h1 class="text-primary display-6">SFruits</h1>
      </a>
      <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="fa fa-bars text-primary"></span>
      </button>
      <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
        <div class="navbar-nav mx-auto">
          <a href="/" class="nav-item nav-link active">Trang chủ</a>
          <a href="/shop" class="nav-item nav-link">Sản phẩm</a>
          <a href="/testimonial" class="nav-item nav-link">Đánh giá</a>
          <a href="/contact" class="nav-item nav-link">Liên Hệ</a>
        </div>
        <div class="d-flex m-3 me-0">
          <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4"
            data-bs-toggle="modal" data-bs-target="#searchModal">
            <i class="fas fa-search text-primary"></i>
          </button>
          <a href="/cart" class="position-relative me-4 my-auto" onclick="openCartPopup()">
            <i class="fa fa-shopping-bag fa-2x"></i>
            <span
              class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1"
              style="top: -5px; left: 15px; height: 20px; min-width: 20px" id="total">0</span>
          </a>
          <div id="userInfo" class="my-auto">
            <!-- Nội dung của phần tử sẽ được cập nhật bằng JavaScript -->
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>
<!-- Navbar End -->

